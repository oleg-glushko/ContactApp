<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ContactApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/lib/aspnet-validation/aspnet-validation.css" /> *@
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContactApp.styles.css" asp-append-version="true" />

    <script src="~/lib/htmx.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body hx-boost="true">
    <div class="container mt-5">
        <div id="messages" class="mb-3"></div>

        <main role="main" >
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/lib/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/lib/_hyperscript.min.js"></script>
    <script defer src="~/lib/alpinejs.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
</body>
</html>